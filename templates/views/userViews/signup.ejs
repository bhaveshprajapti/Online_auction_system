<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="../cdn-cgi/apps/head/hwGM7B4uQy9K8KyLEDAfJqNEXmU.js"></script><link rel="shortcut icon" href="assets/images/auction-fevicon.png">
    <title>SignUp</title>
    <!-- Bootstrap CSS v5.2.1 -->
    <link rel="stylesheet" href="assets/css/all.min.css" type="text/css">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="assets/css/style.css" type="text/css">
    <link rel="stylesheet" href="assets/css/responsive.css" type="text/css">

</head>

<body>
    <!-- Preloader Start -->
    <div class="preloader bg-light" id="preloader">
        <span class="preloader-inner"></span>
    </div>
    <!-- Preloader End -->
    <div class="toggle-theme d-none">
        <input type="checkbox" class="changeTheme" id="changeTheme">
        <label for="changeTheme" class="m-auto"></label>
    </div>
    <div class="login-wrapper" id="login-wrapper" style="background-image: url('assets/images/login-bg.svg')">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="form-wrapper text-center">
                        <a class="d-inline-block mb-2" href="index">
                            <img src="assets/images/auction-fevicon.png" class="themeLogo img-fluid" alt="logo">
                        </a>
                        <h2 class="display-6 fw-bold mb-3">Sign Up</h2>
                        <p class="mb-4">Fill in required details to create a BidZone account</p>
                        <form action="/signupUser" method="POST">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-check">
                                        <label class="form-check-label" for="registerAsSeller">
                                            <input class="form-check-input" type="checkbox" value="seller" id="registerAsSeller" onchange="toggleSellerAddress()">
                                            Register as Seller
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>First Name*</label>
                                        <input type="text" name="firstname" class="form-control" placeholder="Name" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Last Name*</label>
                                        <input type="text" name="lastname" class="form-control" placeholder="Surname" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Mobile No.*</label>
                                        <input type="tel" name="mobileno" class="form-control" placeholder="Mobile No" required>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Email*</label>
                                        <input type="email" name="email" class="form-control" placeholder="name@mail.com" required>
                                    </div>
                                </div>
                                <div class="col-12 mb-3" id="seller-address-field" style="display: none;">
                                    <div class="form-group">
                                        <label>Address*</label>
                                        <input type="text" name="address" class="form-control" placeholder="Address">
                                    </div>
                                </div>
                                <!-- Hidden input field for is_seller -->
                                <input type="hidden" name="is_seller" value="false" id="isSellerInput">
                                <div class="col-12">
                                    <div class="form-group formPassword">
                                        <label>Password*</label>
                                        <input type="password" name="password" class="form-control" placeholder="****" required>
                                        <span class="input-checker password-show-hide"><i class="fa-regular fa-eye-slash"></i></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group formPassword">
                                        <label>Confirm Password*</label>
                                        <input type="password" name="cpassword" class="form-control" placeholder="****" required>
                                        <span class="input-checker"><i class="fa-regular fa-eye-slash"></i></span>
                                    </div>
                                </div>
                                <% if (errors && errors.length > 0) { %>
                                    <div class="alert alert-danger" role="alert">
                                        <% errors.forEach(error => { %>
                                            <p><%= error.msg %></p>
                                        <% }); %>
                                    </div>
                                <% } %>
                                <div class="col-12">
                                    <div class="form-check text-start">
                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" required>
                                        <label class="form-check-label" for="flexCheckDefault">
                                            I accept the <b>terms</b> and <b>privacy policy</b>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12 mb-4">
                                    <button class="primary-btn w-100" type="submit">Submit</button>
                                </div>
                               
                                <p>Already have an account? <a href="login">Log In</a> </p>
                                
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function toggleSellerAddress() {
            var registerAsSellerCheckbox = document.getElementById('registerAsSeller');
            var sellerAddressField = document.getElementById('seller-address-field');
            var isSellerInput = document.getElementById('isSellerInput');
    
            if (registerAsSellerCheckbox.checked) {
                sellerAddressField.style.display = 'block';
                isSellerInput.value = 'true'; // Set the value to true if registering as a seller
            } else {
                sellerAddressField.style.display = 'none';
                isSellerInput.value = 'false'; // Set the value to false if not registering as a seller
            }
        }
    </script>
    <!-- JavaScript Libraries -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/custom.js"></script>
    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                if (localStorage.storedValue == 'dark') {
                    $('#changeTheme').prop('checked', true);
                    $('#changeTheme1').prop('checked', true);
                    document.getElementById("theme").className = "dark";
                    document.getElementById('login-wrapper').style.backgroundImage = "url('assets/images/login-bg-dark.svg')";
                }
                else {
                    $('#changeTheme').prop('checked', false);
                    $('#changeTheme1').prop('checked', false);
                    document.getElementById("theme").className = "light";
                    document.getElementsByClassName('login-wrapper').style.backgroundImage = "url('assets/images/login-bg.svg')";
                }
            });
        });
    </script>
